<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DedicatedServerTool.Avalonia.ViewModels"
        x:DataType="vm:MapBrowserViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DedicatedServerTool.Avalonia.Views.MapBrowserWindow"
        Width="640"
        Height="480"
        Icon="/Assets/ohd.ico"
        Title="Map Scanner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding Maps}" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding PakFilePath}" />
                        <TextBox Text="{Binding MapName}" IsReadOnly="True" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ProgressBar Height="25" Minimum="0" Maximum="{Binding TotalPakFiles}" Value="{Binding TotalProcessedPakFiles}" ShowProgressText="True" IsVisible="{Binding IsLoading}" Grid.Row="1"/>
    </Grid>
</Window>
